<!DOCTYPE html>
<html>
	<head>
		<title>Liste Entreprises</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		<link rel="stylesheet" href="/css/EntreprisePersonneUtilisateur.css">
		<meta charset="UTF-8">
	</head>

	<body>
		{{include('navbar.html.twig')}}
		
		<div class="container-fluid">
			<div class="row">
				<div id="main" class="col-10">
					<table class="table table-striped">
						<tr>
							<td>ID</td>
							<td>Raison Sociale</td>
							<td>Adresse</td>
							<td>Pays</td>
							<td colspan="2">Spécialité</td>
						</tr>
						{% for entreprise in listeEntreprises %}
							<tr>
								<td>{{ entreprise.getId() }}</td>
								<td>
									<a href={{ path('infoEntreprise', { 'id': entreprise.getId() } ) }}>
										{{ entreprise.getENTRS() }}</a>
								</td>
								<td>{{ entreprise.getENTADRESSE() }}
									<br/>
									{{ entreprise.getENTCP() }}
									{{ entreprise.getENTVILLE() }}</td>
								<td>{{ entreprise.getENTPAYS() }}</td>
								<td>
									{% for personne in entreprise.getSpecialites() %}
										{{ personne.getSPELIBELLE() }} /
									{% endfor %}
								</td>

								{% if admin %}
									<td>
										<a href={{ path('supprimerEntreprise', { 'id': entreprise.getId() }) }}>X</a> 
									</td>
								{% endif %}
							</tr>
						{% endfor %}
					</table>
				</div>
				<div id="sidebar" class="col-2">
					<div class="banner filtreDiv">
						<div class="form">
							<h1 class="filtreTexte"> Rechercher par filtres : </h1>
							<br/>
							{{form(formFiltre)}}
						</div>
					</div>
					
					{% if admin %}
						<div class="banner creationDiv">
							<div class="form">
								<h1 class="creationTexte">Création d'une entreprise : </h1>  
								<br/>
								{{form(formNouveau)}}
							</div>
						</div>
						<br/>
					{% endif %}
				</div>	
			</div>
		</div>


