                        <br/>
                        {{form_label(formUtilisateur.UTI_MDP)}}
                        <br/>
                        {{form_widget(formUtilisateur.UTI_MDP)}}
                        <br/>
                        <br/>
                        {{form_label(formUtilisateur.UTI_ADMIN)}}
                        <br/>
                        {{form_widget(formUtilisateur.UTI_ADMIN)}}
                        <br/>
                        <br/>
                        {{form_widget(formUtilisateur.Enregistrer)}}
                    {{form_end(formUtilisateur)}}
                {% endif %}
            </div>
        </div>
    </body>
</html>